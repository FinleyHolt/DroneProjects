%------------------------------------------------------------------------------
% SAFETY QUERY 01: Geofence Check
% Requirement: Must complete in <10ms during flight
% Query: Is current position within authorized airspace?
%------------------------------------------------------------------------------

include('common_axioms.tptp').

% Test instance: UAV in valid position
fof(test_uav, axiom, flyby_f11(uav_alpha)).
fof(test_mission, axiom, uav_mission(mission_alpha)).
fof(test_geofence, axiom, geofence(geofence_alpha)).
fof(test_assignment, axiom, assigned_uav(mission_alpha, uav_alpha)).
fof(test_mission_area, axiom, has_mission_area(mission_alpha, geofence_alpha)).
fof(test_uav_position, axiom, is_within(uav_alpha, geofence_alpha)).

% Query: Prove UAV is NOT in violation (safe position)
fof(prove_no_geofence_violation, conjecture,
    ~geofence_violation(uav_alpha)).
