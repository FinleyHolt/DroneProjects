<?xml version="1.0"?>
<sdf version="1.9">
  <model name="test_drone_x500">
    <include merge="true">
      <!-- Base PX4 x500 quadcopter model -->
      <uri>model://x500</uri>
    </include>

    <!-- T265 Visual Odometry Camera (Front-facing) -->
    <link name="t265_link">
      <pose relative_to="base_link">0.15 0 0 0 0 0</pose>
      <inertial>
        <mass>0.055</mass>
        <inertia>
          <ixx>0.000001</ixx>
          <iyy>0.000001</iyy>
          <izz>0.000001</izz>
        </inertia>
      </inertial>
      <visual name="t265_visual">
        <geometry>
          <box>
            <size>0.024 0.108 0.013</size>
          </box>
        </geometry>
        <material>
          <ambient>0.2 0.2 0.2 1</ambient>
          <diffuse>0.3 0.3 0.3 1</diffuse>
        </material>
      </visual>
      <collision name="t265_collision">
        <geometry>
          <box>
            <size>0.024 0.108 0.013</size>
          </box>
        </geometry>
      </collision>

      <!-- T265 Odometry Sensor (6DOF pose tracking) -->
      <sensor name="t265_odometry" type="navsat">
        <always_on>1</always_on>
        <update_rate>200</update_rate>
        <topic>t265/odom</topic>
        <gz_frame_id>t265_link</gz_frame_id>

        <!-- Odometry plugin - provides ground truth pose -->
        <plugin filename="gz-sim-odometry-publisher-system"
                name="gz::sim::systems::OdometryPublisher">
          <odom_frame>odom</odom_frame>
          <robot_base_frame>base_link</robot_base_frame>
          <odom_publish_frequency>200</odom_publish_frequency>
        </plugin>
      </sensor>

      <!-- T265 Fisheye Cameras (for VSLAM visualization) -->
      <sensor name="t265_fisheye_left" type="camera">
        <pose>0 0.032 0 0 0 0</pose>
        <always_on>1</always_on>
        <update_rate>30</update_rate>
        <visualize>false</visualize>
        <topic>t265/fisheye1/image_raw</topic>
        <camera>
          <horizontal_fov>1.5708</horizontal_fov>
          <image>
            <width>848</width>
            <height>800</height>
            <format>L8</format>
          </image>
          <clip>
            <near>0.1</near>
            <far>100</far>
          </clip>
          <distortion>
            <k1>-0.007419134024530649</k1>
            <k2>0.04135806485414505</k2>
            <k3>-0.03877656906843185</k3>
            <p1>0.0</p1>
            <p2>0.0</p2>
          </distortion>
        </camera>
      </sensor>

      <sensor name="t265_fisheye_right" type="camera">
        <pose>0 -0.032 0 0 0 0</pose>
        <always_on>1</always_on>
        <update_rate>30</update_rate>
        <visualize>false</visualize>
        <topic>t265/fisheye2/image_raw</topic>
        <camera>
          <horizontal_fov>1.5708</horizontal_fov>
          <image>
            <width>848</width>
            <height>800</height>
            <format>L8</format>
          </image>
          <clip>
            <near>0.1</near>
            <far>100</far>
          </clip>
        </camera>
      </sensor>
    </link>

    <joint name="t265_joint" type="fixed">
      <parent>base_link</parent>
      <child>t265_link</child>
    </joint>

    <!-- D455 Depth Camera (Front-facing, below T265) -->
    <link name="d455_link">
      <pose relative_to="base_link">0.15 0 -0.05 0 0 0</pose>
      <inertial>
        <mass>0.095</mass>
        <inertia>
          <ixx>0.000001</ixx>
          <iyy>0.000001</iyy>
          <izz>0.000001</izz>
        </inertia>
      </inertial>
      <visual name="d455_visual">
        <geometry>
          <box>
            <size>0.026 0.124 0.029</size>
          </box>
        </geometry>
        <material>
          <ambient>0.1 0.1 0.1 1</ambient>
          <diffuse>0.2 0.2 0.2 1</diffuse>
        </material>
      </visual>
      <collision name="d455_collision">
        <geometry>
          <box>
            <size>0.026 0.124 0.029</size>
          </box>
        </geometry>
      </collision>

      <!-- D455 RGB Camera -->
      <sensor name="d455_color" type="camera">
        <pose>0 0 0 0 0 0</pose>
        <always_on>1</always_on>
        <update_rate>30</update_rate>
        <visualize>true</visualize>
        <topic>d455/color/image_raw</topic>
        <camera>
          <horizontal_fov>1.5009831567151233</horizontal_fov>
          <image>
            <width>640</width>
            <height>480</height>
            <format>RGB_INT8</format>
          </image>
          <clip>
            <near>0.1</near>
            <far>100</far>
          </clip>
        </camera>
      </sensor>

      <!-- D455 Depth Camera -->
      <sensor name="d455_depth" type="depth_camera">
        <pose>0 0.01 0 0 0 0</pose>
        <always_on>1</always_on>
        <update_rate>30</update_rate>
        <visualize>true</visualize>
        <topic>d455/depth</topic>
        <camera>
          <horizontal_fov>1.5009831567151233</horizontal_fov>
          <image>
            <width>640</width>
            <height>480</height>
            <format>R_FLOAT32</format>
          </image>
          <clip>
            <near>0.3</near>
            <far>10.0</far>
          </clip>
        </camera>
      </sensor>

      <!-- D455 IR Stereo Cameras (for depth computation) -->
      <sensor name="d455_infra1" type="camera">
        <pose>0 0.025 0 0 0 0</pose>
        <always_on>1</always_on>
        <update_rate>30</update_rate>
        <visualize>false</visualize>
        <topic>d455/infra1/image_raw</topic>
        <camera>
          <horizontal_fov>1.5009831567151233</horizontal_fov>
          <image>
            <width>640</width>
            <height>480</height>
            <format>L8</format>
          </image>
          <clip>
            <near>0.1</near>
            <far>100</far>
          </clip>
        </camera>
      </sensor>

      <sensor name="d455_infra2" type="camera">
        <pose>0 -0.025 0 0 0 0</pose>
        <always_on>1</always_on>
        <update_rate>30</update_rate>
        <visualize>false</visualize>
        <topic>d455/infra2/image_raw</topic>
        <camera>
          <horizontal_fov>1.5009831567151233</horizontal_fov>
          <image>
            <width>640</width>
            <height>480</height>
            <format>L8</format>
          </image>
          <clip>
            <near>0.1</near>
            <far>100</far>
          </clip>
        </camera>
      </sensor>
    </link>

    <joint name="d455_joint" type="fixed">
      <parent>base_link</parent>
      <child>d455_link</child>
    </joint>

    <!-- Plugins for sensor data publishing -->
    <plugin filename="gz-sim-odometry-publisher-system"
            name="gz::sim::systems::OdometryPublisher">
      <odom_frame>odom</odom_frame>
      <robot_base_frame>base_link</robot_base_frame>
      <odom_publish_frequency>200</odom_publish_frequency>
    </plugin>

  </model>
</sdf>
