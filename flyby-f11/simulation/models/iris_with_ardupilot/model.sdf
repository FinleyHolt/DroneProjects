<?xml version="1.0" ?>
<!--
  Iris Quadcopter with ArduPilot Integration
  Enhanced with Realistic Sensors for Flyby F-11 Training

  Sensors:
  - IMU (250Hz) with realistic MEMS noise
  - GPS/NavSat (10Hz) with consumer-grade accuracy
  - Magnetometer (50Hz) with declination modeling
  - Barometer (20Hz) with atmospheric noise
  - Rangefinder (20Hz) downward-facing lidar

  Sensor profiles can be loaded from:
  - configs/sensor_profiles/high_fidelity.yaml (default, realistic noise)
  - configs/sensor_profiles/low_fidelity.yaml (minimal noise for debugging)
  - configs/sensor_profiles/adversarial.yaml (high noise for robust training)

  Author: Finley Holt
  Date: 2025-12-27
-->
<sdf version="1.9">
  <model name="iris_with_ardupilot">
    <pose>0 0 0.2 0 0 0</pose>

    <link name="base_link">
      <inertial>
        <mass>1.5</mass>
        <inertia>
          <ixx>0.029125</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>0.029125</iyy>
          <iyz>0</iyz>
          <izz>0.055225</izz>
        </inertia>
      </inertial>

      <visual name="body_visual">
        <geometry>
          <box>
            <size>0.47 0.47 0.11</size>
          </box>
        </geometry>
        <material>
          <ambient>0.2 0.2 0.2 1</ambient>
          <diffuse>0.2 0.2 0.2 1</diffuse>
        </material>
      </visual>

      <!-- Center marker for orientation (green = forward) -->
      <visual name="center_marker">
        <pose>0.15 0 0 0 0 0</pose>
        <geometry>
          <sphere>
            <radius>0.05</radius>
          </sphere>
        </geometry>
        <material>
          <ambient>0 1 0 1</ambient>
          <diffuse>0 1 0 1</diffuse>
        </material>
      </visual>

      <collision name="collision">
        <geometry>
          <box>
            <size>0.47 0.47 0.11</size>
          </box>
        </geometry>
      </collision>

      <!-- ================================ -->
      <!-- GPS/NavSat Sensor                -->
      <!-- Consumer-grade GPS accuracy      -->
      <!-- ================================ -->
      <sensor name="navsat_sensor" type="navsat">
        <always_on>1</always_on>
        <update_rate>10</update_rate>
        <topic>gps</topic>
        <navsat>
          <position_sensing>
            <horizontal>
              <noise type="gaussian">
                <mean>0.0</mean>
                <stddev>0.5</stddev>
              </noise>
            </horizontal>
            <vertical>
              <noise type="gaussian">
                <mean>0.0</mean>
                <stddev>1.0</stddev>
              </noise>
            </vertical>
          </position_sensing>
          <velocity_sensing>
            <horizontal>
              <noise type="gaussian">
                <mean>0.0</mean>
                <stddev>0.05</stddev>
              </noise>
            </horizontal>
            <vertical>
              <noise type="gaussian">
                <mean>0.0</mean>
                <stddev>0.1</stddev>
              </noise>
            </vertical>
          </velocity_sensing>
        </navsat>
      </sensor>

      <!-- ================================ -->
      <!-- Magnetometer Sensor              -->
      <!-- Earth magnetic field sensing     -->
      <!-- Declination: ~11.5 deg E (San Diego) -->
      <!-- ================================ -->
      <sensor name="magnetometer_sensor" type="magnetometer">
        <always_on>1</always_on>
        <update_rate>50</update_rate>
        <topic>magnetometer</topic>
        <magnetometer>
          <x>
            <noise type="gaussian">
              <mean>0</mean>
              <stddev>0.001</stddev>
              <bias_mean>0.00001</bias_mean>
              <bias_stddev>0.000002</bias_stddev>
            </noise>
          </x>
          <y>
            <noise type="gaussian">
              <mean>0</mean>
              <stddev>0.001</stddev>
              <bias_mean>0.00001</bias_mean>
              <bias_stddev>0.000002</bias_stddev>
            </noise>
          </y>
          <z>
            <noise type="gaussian">
              <mean>0</mean>
              <stddev>0.001</stddev>
              <bias_mean>0.00001</bias_mean>
              <bias_stddev>0.000002</bias_stddev>
            </noise>
          </z>
        </magnetometer>
      </sensor>

      <!-- ================================ -->
      <!-- Barometer Sensor                 -->
      <!-- Atmospheric pressure sensing     -->
      <!-- ~8.3 Pa per meter at sea level   -->
      <!-- ================================ -->
      <sensor name="air_pressure_sensor" type="air_pressure">
        <always_on>1</always_on>
        <update_rate>20</update_rate>
        <topic>air_pressure</topic>
        <air_pressure>
          <reference_altitude>0</reference_altitude>
          <pressure>
            <noise type="gaussian">
              <mean>0</mean>
              <stddev>10</stddev>
            </noise>
          </pressure>
        </air_pressure>
      </sensor>

    </link>

    <!-- ================================ -->
    <!-- Rotor 0 (Front Right, CW)        -->
    <!-- ================================ -->
    <link name="rotor_0">
      <pose>0.13 -0.22 0.023 0 0 0</pose>
      <inertial>
        <mass>0.005</mass>
        <inertia>
          <ixx>9.75e-07</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>0.000166704</iyy>
          <iyz>0</iyz>
          <izz>0.000167604</izz>
        </inertia>
      </inertial>
      <visual name="visual">
        <geometry>
          <cylinder>
            <radius>0.128</radius>
            <length>0.005</length>
          </cylinder>
        </geometry>
        <material>
          <ambient>1 0 0 1</ambient>
          <diffuse>1 0 0 1</diffuse>
        </material>
      </visual>
    </link>

    <!-- ================================ -->
    <!-- Rotor 1 (Back Left, CW)          -->
    <!-- ================================ -->
    <link name="rotor_1">
      <pose>-0.13 0.2 0.023 0 0 0</pose>
      <inertial>
        <mass>0.005</mass>
        <inertia>
          <ixx>9.75e-07</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>0.000166704</iyy>
          <iyz>0</iyz>
          <izz>0.000167604</izz>
        </inertia>
      </inertial>
      <visual name="visual">
        <geometry>
          <cylinder>
            <radius>0.128</radius>
            <length>0.005</length>
          </cylinder>
        </geometry>
        <material>
          <ambient>1 0 0 1</ambient>
          <diffuse>1 0 0 1</diffuse>
        </material>
      </visual>
    </link>

    <!-- ================================ -->
    <!-- Rotor 2 (Front Left, CCW)        -->
    <!-- ================================ -->
    <link name="rotor_2">
      <pose>0.13 0.22 0.023 0 0 0</pose>
      <inertial>
        <mass>0.005</mass>
        <inertia>
          <ixx>9.75e-07</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>0.000166704</iyy>
          <iyz>0</iyz>
          <izz>0.000167604</izz>
        </inertia>
      </inertial>
      <visual name="visual">
        <geometry>
          <cylinder>
            <radius>0.128</radius>
            <length>0.005</length>
          </cylinder>
        </geometry>
        <material>
          <ambient>0 0 1 1</ambient>
          <diffuse>0 0 1 1</diffuse>
        </material>
      </visual>
    </link>

    <!-- ================================ -->
    <!-- Rotor 3 (Back Right, CCW)        -->
    <!-- ================================ -->
    <link name="rotor_3">
      <pose>-0.13 -0.2 0.023 0 0 0</pose>
      <inertial>
        <mass>0.005</mass>
        <inertia>
          <ixx>9.75e-07</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>0.000166704</iyy>
          <iyz>0</iyz>
          <izz>0.000167604</izz>
        </inertia>
      </inertial>
      <visual name="visual">
        <geometry>
          <cylinder>
            <radius>0.128</radius>
            <length>0.005</length>
          </cylinder>
        </geometry>
        <material>
          <ambient>0 0 1 1</ambient>
          <diffuse>0 0 1 1</diffuse>
        </material>
      </visual>
    </link>

    <!-- Rotor joints -->
    <joint name="rotor_0_joint" type="revolute">
      <parent>base_link</parent>
      <child>rotor_0</child>
      <axis>
        <xyz>0 0 1</xyz>
        <limit>
          <lower>-1e16</lower>
          <upper>1e16</upper>
        </limit>
      </axis>
    </joint>

    <joint name="rotor_1_joint" type="revolute">
      <parent>base_link</parent>
      <child>rotor_1</child>
      <axis>
        <xyz>0 0 1</xyz>
        <limit>
          <lower>-1e16</lower>
          <upper>1e16</upper>
        </limit>
      </axis>
    </joint>

    <joint name="rotor_2_joint" type="revolute">
      <parent>base_link</parent>
      <child>rotor_2</child>
      <axis>
        <xyz>0 0 1</xyz>
        <limit>
          <lower>-1e16</lower>
          <upper>1e16</upper>
        </limit>
      </axis>
    </joint>

    <joint name="rotor_3_joint" type="revolute">
      <parent>base_link</parent>
      <child>rotor_3</child>
      <axis>
        <xyz>0 0 1</xyz>
        <limit>
          <lower>-1e16</lower>
          <upper>1e16</upper>
        </limit>
      </axis>
    </joint>

    <!-- ================================ -->
    <!-- IMU Sensor Link                  -->
    <!-- 250Hz MEMS IMU with noise        -->
    <!-- ================================ -->
    <link name="imu_link">
      <pose>0 0 0 0 0 0</pose>
      <inertial>
        <mass>0.001</mass>
        <inertia>
          <ixx>1e-05</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>1e-05</iyy>
          <iyz>0</iyz>
          <izz>1e-05</izz>
        </inertia>
      </inertial>
      <sensor name="imu_sensor" type="imu">
        <always_on>1</always_on>
        <update_rate>250</update_rate>
        <topic>imu</topic>
        <imu>
          <angular_velocity>
            <x>
              <noise type="gaussian">
                <mean>0</mean>
                <stddev>0.009</stddev>
                <bias_mean>0.0001</bias_mean>
                <bias_stddev>0.00002</bias_stddev>
              </noise>
            </x>
            <y>
              <noise type="gaussian">
                <mean>0</mean>
                <stddev>0.009</stddev>
                <bias_mean>0.0001</bias_mean>
                <bias_stddev>0.00002</bias_stddev>
              </noise>
            </y>
            <z>
              <noise type="gaussian">
                <mean>0</mean>
                <stddev>0.009</stddev>
                <bias_mean>0.0001</bias_mean>
                <bias_stddev>0.00002</bias_stddev>
              </noise>
            </z>
          </angular_velocity>
          <linear_acceleration>
            <x>
              <noise type="gaussian">
                <mean>0</mean>
                <stddev>0.017</stddev>
                <bias_mean>0.001</bias_mean>
                <bias_stddev>0.0002</bias_stddev>
              </noise>
            </x>
            <y>
              <noise type="gaussian">
                <mean>0</mean>
                <stddev>0.017</stddev>
                <bias_mean>0.001</bias_mean>
                <bias_stddev>0.0002</bias_stddev>
              </noise>
            </y>
            <z>
              <noise type="gaussian">
                <mean>0</mean>
                <stddev>0.017</stddev>
                <bias_mean>0.001</bias_mean>
                <bias_stddev>0.0002</bias_stddev>
              </noise>
            </z>
          </linear_acceleration>
        </imu>
      </sensor>
    </link>

    <joint name="imu_joint" type="fixed">
      <parent>base_link</parent>
      <child>imu_link</child>
    </joint>

    <!-- ================================ -->
    <!-- Rangefinder Link                 -->
    <!-- Downward-facing lidar for AGL    -->
    <!-- ================================ -->
    <link name="rangefinder_link">
      <pose>0 0 -0.05 0 0 0</pose>
      <inertial>
        <mass>0.01</mass>
        <inertia>
          <ixx>1e-05</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>1e-05</iyy>
          <iyz>0</iyz>
          <izz>1e-05</izz>
        </inertia>
      </inertial>
      <visual name="visual">
        <geometry>
          <cylinder>
            <radius>0.01</radius>
            <length>0.02</length>
          </cylinder>
        </geometry>
        <material>
          <ambient>0.5 0.5 0.5 1</ambient>
          <diffuse>0.5 0.5 0.5 1</diffuse>
        </material>
      </visual>
      <sensor name="rangefinder" type="gpu_lidar">
        <!-- Pointing straight down (pitch = -90 deg = -1.5708 rad) -->
        <pose>0 0 0 0 1.5708 0</pose>
        <always_on>1</always_on>
        <update_rate>20</update_rate>
        <topic>rangefinder</topic>
        <ray>
          <scan>
            <horizontal>
              <samples>1</samples>
              <resolution>1</resolution>
              <min_angle>0</min_angle>
              <max_angle>0</max_angle>
            </horizontal>
            <vertical>
              <samples>1</samples>
              <resolution>1</resolution>
              <min_angle>0</min_angle>
              <max_angle>0</max_angle>
            </vertical>
          </scan>
          <range>
            <min>0.1</min>
            <max>40.0</max>
            <resolution>0.01</resolution>
          </range>
          <noise>
            <type>gaussian</type>
            <mean>0</mean>
            <stddev>0.02</stddev>
          </noise>
        </ray>
        <visualize>false</visualize>
      </sensor>
    </link>

    <joint name="rangefinder_joint" type="fixed">
      <parent>base_link</parent>
      <child>rangefinder_link</child>
    </joint>

    <!-- ================================ -->
    <!-- ArduPilot Plugin                 -->
    <!-- ================================ -->
    <plugin filename="ArduPilotPlugin" name="ArduPilotPlugin">
      <!-- Network Configuration -->
      <fdm_addr>127.0.0.1</fdm_addr>
      <fdm_port_in>9002</fdm_port_in>
      <fdm_port_out>9003</fdm_port_out>
      <connectionTimeoutMaxCount>5</connectionTimeoutMaxCount>

      <!-- Simulation Settings -->
      <lock_step>1</lock_step>
      <have_32_channels>0</have_32_channels>

      <!-- Coordinate Transforms -->
      <modelXYZToAirplaneXForwardZDown>0 0 0 3.141593 0 0</modelXYZToAirplaneXForwardZDown>
      <gazeboXYZToNED>0 0 0 3.141593 0 0</gazeboXYZToNED>

      <!-- Sensor Reference -->
      <imuName>imu_link::imu_sensor</imuName>

      <!-- Control Channel 0: Front Right (CW) -->
      <control channel="0">
        <jointName>rotor_0_joint</jointName>
        <useForce>1</useForce>
        <multiplier>838</multiplier>
        <offset>-0.5</offset>
        <servo_min>1000</servo_min>
        <servo_max>2000</servo_max>
        <type>VELOCITY</type>
        <p_gain>0.20</p_gain>
        <i_gain>0</i_gain>
        <d_gain>0</d_gain>
        <i_max>0</i_max>
        <i_min>0</i_min>
        <cmd_max>2.5</cmd_max>
        <cmd_min>-2.5</cmd_min>
      </control>

      <!-- Control Channel 1: Back Left (CW) -->
      <control channel="1">
        <jointName>rotor_1_joint</jointName>
        <useForce>1</useForce>
        <multiplier>838</multiplier>
        <offset>-0.5</offset>
        <servo_min>1000</servo_min>
        <servo_max>2000</servo_max>
        <type>VELOCITY</type>
        <p_gain>0.20</p_gain>
        <i_gain>0</i_gain>
        <d_gain>0</d_gain>
        <i_max>0</i_max>
        <i_min>0</i_min>
        <cmd_max>2.5</cmd_max>
        <cmd_min>-2.5</cmd_min>
      </control>

      <!-- Control Channel 2: Front Left (CCW) -->
      <control channel="2">
        <jointName>rotor_2_joint</jointName>
        <useForce>1</useForce>
        <multiplier>838</multiplier>
        <offset>-0.5</offset>
        <servo_min>1000</servo_min>
        <servo_max>2000</servo_max>
        <type>VELOCITY</type>
        <p_gain>0.20</p_gain>
        <i_gain>0</i_gain>
        <d_gain>0</d_gain>
        <i_max>0</i_max>
        <i_min>0</i_min>
        <cmd_max>2.5</cmd_max>
        <cmd_min>-2.5</cmd_min>
      </control>

      <!-- Control Channel 3: Back Right (CCW) -->
      <control channel="3">
        <jointName>rotor_3_joint</jointName>
        <useForce>1</useForce>
        <multiplier>838</multiplier>
        <offset>-0.5</offset>
        <servo_min>1000</servo_min>
        <servo_max>2000</servo_max>
        <type>VELOCITY</type>
        <p_gain>0.20</p_gain>
        <i_gain>0</i_gain>
        <d_gain>0</d_gain>
        <i_max>0</i_max>
        <i_min>0</i_min>
        <cmd_max>2.5</cmd_max>
        <cmd_min>-2.5</cmd_min>
      </control>
    </plugin>

  </model>
</sdf>
